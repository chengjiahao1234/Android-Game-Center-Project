<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fall2018.csc207.project.gamecenter.slidingtiles.GameActivity">

<fall2018.csc207.project.gamecenter.slidingtiles.GestureDetectGridView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="0dp"
    android:layout_marginTop="76dp"
    tools:context="fall2018.csc207.project.gamecenter.slidingtiles.GameActivity" />

    <Button
        android:id="@+id/undo"
        android:layout_width="138dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/grid"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="4dp"
        android:text="Undo" />

    <Button
        android:layout_width="138dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/grid"
        android:layout_alignParentEnd="true"
        android:id="@+id/saveBtn"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0dp"
        android:text="@string/save_game"/>

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/grid"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-76dp"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/move"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/grid"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-76dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="number"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="30sp" />

</RelativeLayout>
