<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fall2018.csc207.project.gamecenter.game2048.TZFEGameActivity">

    <fall2018.csc207.project.gamecenter.game2048.TZFEGestureDetectGridView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/grid_2048"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="76dp"
        tools:context="fall2018.csc207.project.gamecenter.game2048.TZFEGameActivity" />

    <Button
        android:layout_width="138dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/grid_2048"
        android:layout_alignParentEnd="true"
        android:id="@+id/saveBtn_2048"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0dp"
        android:text="@string/save_game"/>

    <Button
        android:id="@+id/backToStart_2048"
        android:layout_width="138dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/grid_2048"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="246dp"
        android:layout_marginBottom="0dp"
        android:text="Back" />

    <Chronometer
        android:id="@+id/chronometer_2048"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/grid_2048"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-76dp"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/move_2048"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/grid_2048"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-76dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="number"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="30sp" />

</RelativeLayout>
